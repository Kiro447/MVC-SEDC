@model List<PizzaViewModel>

<h2>Pizzas</h2>

<ul>
    @for(int i = 0 ; i < @Model.Count ; i++)
    {
        
        <li>Name: @Model.ElementAt(i).Name</li>
        <li>Pizza Size: @Model.ElementAt(i).PizzaSize</li>
        <li>Price: @Model.ElementAt(i).Price</li>
        <li>HasExtras: @Model.ElementAt(i).HasExtras</li>
        <li>IsOnPromotion: @Model.ElementAt(i).IsOnPromotion</li>
        <br />
    }

</ul>